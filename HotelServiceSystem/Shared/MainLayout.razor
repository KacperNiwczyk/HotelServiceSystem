@inherits LayoutComponentBase

<MudThemeProvider Theme="_themeManager.Theme" />
<MudLayout Style="background-color: #F5F5F5">
    <MudAppBar Elevation="4" Style="background-color:#8C8C88">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudIcon Icon="@Icons.Material.Outlined.Roofing" Size="Size.Large" />
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <MudText Typo="Typo.h6" Class="ml-4">myHotel.io</MudText>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.Xs" Invert="true">
            <MudText Typo="Typo.subtitle2">myHotel.io</MudText>
        </MudHidden>
        <MudMenu Direction="Direction.Left" OffsetX="true" Dense="true" Class="mt-1 ml-4">
            <LoginLayout/>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="25" ClipMode="_themeManager.DrawerClipMode" Style="background-color: #202426">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudToolBar DisableGutters="true">
                <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3"/>
            </MudToolBar>
        </MudHidden>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4" Style="height: 100vh">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Tertiary" Icon="@Icons.Filled.ArrowCircleUp"/>
    </MudScrollToTop>
</MudLayout>
@code{
    private ThemeManagerTheme _themeManager = new ThemeManagerTheme();
    
    public bool _drawerOpen = true;
    
    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private string AppBarBackground = "#8C8C88";

    protected override void OnInitialized()
    {
        _themeManager.Theme = new HssTheme();
        _themeManager.DrawerClipMode = DrawerClipMode.Always;
        _themeManager.FontFamily = "Montserrat";
        _themeManager.DefaultBorderRadius = 3;
    }
}