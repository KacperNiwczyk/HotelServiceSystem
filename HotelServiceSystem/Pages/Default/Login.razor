@page "/"
@page "/pages/authentication/login"
@using InputType = MudBlazor.InputType

@layout LoginLayout

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h4" GutterBottom="true">Sign In</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudTextField T="string" Value="@Username" Label="E-mail" Variant="Variant.Outlined" Class="my-6"></MudTextField>
    </MudItem>
    <MudItem xs="12">
        <MudTextField @bind-Value="@Password" Label="Hasło" Variant="Variant.Outlined" InputType="InputType.Password" />
    </MudItem>
    <MudItem xs="12">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Link="/dashboard" Size="Size.Large" FullWidth="true">Sign In</MudButton>
    </MudItem>
</MudGrid>

@code {
    private string Password { get; set; }

    private string Username { get; set; } = "kniwczyk";
}