@page "/users"
@using HotelServiceSystem.Interfaces.Services
@using HotelServiceSystem.Entities
@inject IUserService userService
@inject NavigationManager navigationManager

<MudGrid>
    <MudItem xs="12">
        <MudCard Elevation="25">
            <MudExpansionPanel HideIcon="@true">
                <TitleContent>
                    <div class="d-flex">
                        <MudIcon Icon="@Icons.Rounded.Add" class="mr3"/>
                        <MudText> Add user</MudText>
                    </div>
                </TitleContent>
                <ChildContent>
                    <HssUserInput UserModel="@(new User())" OnSubmit="OnUserAdd"/>
                </ChildContent>
            </MudExpansionPanel>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <HssUserTable UserList="@UserList"/>
    </MudItem>
</MudGrid>


@code {
    private List<User> UserList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        UserList = userService.GetAllUserAsync();
        await base.OnInitializedAsync();
    }

    private async Task OnUserAdd(User user)
    {
        await userService.AddUserAsync(user);
        UserList.Add(user);
    }
}