@using System.Linq.Expressions

<MatDatePicker class="form-control col-3" @bind-Value="@ChoosenDate" Label="@Label"  Style="margin-right: 30px" Minimum="@MinimalDate"/>
<br/>
<ValidationMessage For="@ValidationFor"/>

@code {

    private DateTime _choosenDate;
    
    [Parameter]
    public string Label { get; set; }
    
    [Parameter]
    public DateTime MinimalDate { get; set; } = DateTime.Today.ToLocalTime().AddDays(-1);
    
    [Parameter]
    public DateTime ChoosenDate
    {
        get => _choosenDate;
        set
        {
            _choosenDate = value;
            OnValueChanged.InvokeAsync(ChoosenDate);
        }

    }
    
    [Parameter]
    public EventCallback<DateTime> OnValueChanged { get; set; }
    
    [Parameter]
    public Expression<Func<DateTime>> ValidationFor { get; set; }
}